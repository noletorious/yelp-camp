<% include ../partials/header %>

<header class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1>Edit <%= campground.name %></h1>
        <a class="btn" href="/campgrounds">&larr; View Campgrounds</a>
    </div>
</header>
<div class="container">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" value="<%= campground.name %>" name="campground[name]">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="<%= campground.price %>" name="campground[price]">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="<%= campground.image %>" name="campground[image]">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="<%= campground.description %>" name="campground[description]">
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>