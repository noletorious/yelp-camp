<% include ../partials/header %>

<header class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1>Create a new campground</h1>
        <a class="btn" href="/campgrounds">&larr; View Campgrounds</a>
    </div>
</header>
<div class="container">
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Campsite Name..." name="name">
        </div>
        <div class="form-group">
            <input type="number" min="0.01" step="0.01" class="form-control" placeholder="Price per night" name="price">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Image URL..." name="image">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Description..." name="description">
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>