<% include ../partials/header %>

<header class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1>Create a comment for: <%= campground.name %></h1>
        <a class="btn" href="/campgrounds/<%= campground._id %>">&larr; View Campgrounds</a>
    </div>
</header>
<div class="container">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Your review..." name="comment[text]">
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>