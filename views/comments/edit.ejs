<% include ../partials/header %>

<header class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1>Edit comment:</h1>
        <a class="btn" href="/campgrounds/<%= campground._id %>">&larr; Back to <%= campground.name %></a>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col-6">
            <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>    
    </div>
</div>

<% include ../partials/footer %>